<%- include('../partials/header') %>

    <link rel="stylesheet" href="../../public/stylesheets/tourShow.css">
    <title>Tour details</title>
</head>
<body>

<%- include('../partials/navbar') %>
<% user.tour.forEach(tour =>{ %> 
  <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="<%= tour.image %> " alt="Tour image">
      
      <div class="card-body">
        <h5 class="card-title"><%= tour.name %></h5>
      </div>
      
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><b>Where: </b><%= tour.location %> </li>
      </ul>
    
      <div class="card-body">
          <a class="btn btn-primary" href="/tours/<%= tour._id %>" role="button">Details</a>
          <a class="btn btn-primary" href="/tours/<%= tour._id %>/bookings" role="button">Booking details</a>
      </div>
     
     
    </div>
<% }) %> 

<%- include('../partials/footer') %>
