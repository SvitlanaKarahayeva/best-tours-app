<%- include('../partials/header') %>
<link rel="stylesheet" href="../../stylesheets/style.css">

    <title>All tours</title>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="head-name">
    <h2>Tours booked by <%= user.name %> </h2>
  </div>
  
  <div id="cards-container">
    <!-- Cards bootstrap template -->
    <% user.tour.forEach(tour =>{ %> 
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%= tour.image %> " alt="Tour image">
            
            <div class="card-body">
              <h5 class="card-title"><a href="/tours/<%= tour._id %>"><%= tour.name %></a></h5>
            </div>
            
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><b>Where: </b><%= tour.location %> </li>
              <li class="list-group-item"><b>Price: </b>$<%= tour.price %> CAD </li>
            </ul>
          
            <div class="card-body">
              <div class="buttons">
    
                <a class="btn btn-primary" href="/tours/<%= tour._id %>/bookings" role="button">Booking details</a>             
              </div>
            </div>
          </div>
    <% }) %> 
  </div>

<%- include('../partials/footer') %>
