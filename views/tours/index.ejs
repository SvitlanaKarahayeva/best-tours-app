<%- include('../partials/header') %>
<link rel='stylesheet' href='../stylesheets/style.css'/>

    <title>All tours</title>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="head-name">
    <h2>Check all the tours we've got</h2>
  </div>
  
  <div id="cards-container">
    <!-- Cards bootstrap template -->
    <% tours.forEach(tour =>{ %> 
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%= tour.image %> " alt="Tour image">
            
            <div class="card-body">
              <h5 class="card-title"><%= tour.name %></h5>
            </div>
            
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><b>Where: </b><%= tour.location %> </li>
            </ul>
          
            <div class="card-body">
              <div class="buttons">
                <a class="btn btn-primary" href="/tours/<%= tour._id %>" role="button">Details</a>

                <!-- show buttons- DELETE AND UPDATE only to Admin user -->
                <% if (typeof user !== 'undefined' && user.email === "user.besttours@gmail.com") { %>
                  <a class="btn btn-warning" href="/tours/<%= tour._id %>/update" role="button">Update</a>
                  <!-- delete form and btn -->
                  <form action="/tours/<%= tour._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                  </form>
                <% } else {} %>
              </div>
            </div>
          </div>
    <% }) %> 
  </div>

<%- include('../partials/footer') %>