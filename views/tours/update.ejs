<%- include('../partials/header') %>

    <link rel="stylesheet" href="../../public/stylesheets/tourShow.css">
    <title>Update tour</title>
</head>
<body>

  <%- include('../partials/navbar') %>
    <h1>Update tour</h1>
    <!-- Update tour form -->
    
    <div class="form-div">
      <form action="/tours/<%= tour._id %>?_method=PUT" method="POST">

        <div class="form-outline datepicker" style="width:300px">
            <div class="form-group">  
                <label>Name</label>
                <input type="text" name="name" placeholder="Name" value="<%= tour.name %> ">
            </div>
            <div class="form-group">  
                <label>Image</label>
                <input type="url" name="image" placeholder="image" value="<%= tour.image %> ">
            </div>
            <div class="form-group">  
                <label>Tour type</label>
                <select name="tourType">
                    <option value="Aqua Advantures">Aqua Advantures</option> 
                    <option value="Historical places">Historical places</option>
                    <option value="Food Tasting">Food Tasting</option>
                    <option value="Fun activities">Fun activities</option>
                </select>
            </div>
                

            <div class="form-group">  
                <label>Location</label>
                <input type="text" name="location" placeholder="location" value="<%= tour.location %>">
            </div>

            <div class="form-group">  
                <label>Price</label>
                <input type="number" name="price" placeholder="price" value="<%= tour.price %>">
            </div>

            <div class="form-group">  
                <label>Description</label>

                <input type="text" name="description" placeholder="description" value="<%= tour.description %>">
                <!-- <textarea name="description" rows="5" cols="50" >
                    <input type="text" name="description" placeholder="description" value="< tour.description %>">
                </textarea> -->
            </div>

      
          <button type="submit" class="btn btn-primary">Update</button>

        </form>    
      </div>
      <a href="/tours/<%= tour._id %> "><button type="submit" class="btn btn-danger">Cancel</button></a>

<%- include('../partials/footer') %>