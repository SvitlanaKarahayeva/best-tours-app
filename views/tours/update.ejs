<%- include('../partials/header') %>

<link rel='stylesheet' href='/stylesheets/style.css'/>
    <title>Update tour</title>
</head>
<body>

  <%- include('../partials/navbar') %>
    <div class="head-name">
      <h3>Update <a href="/tours/<%= tour._id %>">tour</a> </h3>
    </div>
    <!-- Update tour form -->
    <div class="update-create-form">

    <form action="/tours/<%= tour._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Tour Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="<%= tour.name %>">      
        </div>

        <div class="form-group">
            <label for="image">Tour image</label>
            <input type="url" class="form-control" id="image" name="name" placeholder="Image" value="<%= tour.image %>">   
        </div>

        <div class="form-group">
          <label for="tourType">Tour Type</label>
          <select class="form-control" id="tourType">
            <option value="Aqua Advantures">Aqua Advantures</option> 
            <option value="Historical places">Historical places</option>
            <option value="Food Tasting">Food Tasting</option>
            <option value="Fun activities">Fun activities</option>
          </select>
        </div>

        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" class="form-control" id="location" name="name" placeholder="location" value="<%= tour.location %>">   
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="price" value="<%= tour.price %>">   
        </div>
  
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" id="description" rows="5" rows="5" cols="50" name="description" placeholder="description" value="<%= tour.description %>">
            <%= tour.description %>
        </textarea>
        </div> 

        <button type="submit" class="btn btn-primary">Update</button>
      </form>
      <a href="/tours/<%= tour._id %> "><button type="submit" class="btn btn-danger">Cancel</button></a>
    </div>
<%- include('../partials/footer') %>