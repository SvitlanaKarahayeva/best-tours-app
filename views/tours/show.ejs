<%- include('../partials/header') %>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
    
  <title>Tour details</title>
</head>
<body>

  <%- include('../partials/navbar') %>
  <!-- Tour name and image -->
  <div class="head-name">
    <h3><%= tour.name %> - <span class="spans">$<%= tour.price %> CAD</span></h3>
  </div>
 
   <div id="show-container">
   
   <div id="pics">
     <img src="<%= tour.image %>" alt="">
   </div>

<!-- description -->
   <div class="jumbotron">
    <h1 class="display-4">Tour Details</h1>
    <p class="lead"></p>
    <hr class="my-4">
    <p>Where: <%= tour.location %> </p><br>
    <p>When: to be confimed</p><br>
    <p><%= tour.description %></p>
  </div>

 </div>
 <!-- booking form -->
 <div id="booking-container">

  <div class="form-div">
    <h3 style="margin: 5px; color:grey">Book now and pay later</h3>
    <form action="/tours/booking/<%= tour._id%>" method="POST">
      
      
      <div class="form-outline datepicker" style="width:300px">
        <label>Date</label>
        <input type="date" id="start" name="date" value="2021-25-09"
          min="2021-09-25" max="2022-09-01">
      </div>

    <!-- Name and email from req.user -->
      <% if(typeof user !== 'undefined') { %>        
        <div class="form-group">  
          <label>Name</label>
          <input type="text" name="name" value="<%= user.name %>">
        </div>
        <div class="form-group">  
          <label>Email</label>
          <input type="email" name="email" value="<%= user.email %>">
        </div>
      <% } else { %>
         <div class="form-group">  
          <label>Name</label>
          <input type="text" name="name" value="name">
        </div>
        <div class="form-group">  
          <label>Email</label>
          <input type="email" name="email" value="email">
        </div>
      <% } %>

        <div class="form-group">  
          <label>Phone number</label>
          <input type="number" name="phoneNumber">
        </div>
        <div class="form-group">  
          <label>Number of people:</label>
          <input type="number" name="people">
        </div>

       <% if(typeof user !== 'undefined') { %>  
        <button type="submit" class="btn btn-success">Book</button>
      <% } else { %>
        <button type="submit" class="btn btn-danger" disabled style="cursor: not-allowed;">Login first</button>
        <p>Please login with Google to book your tour</p>
        
        <% } %>
      </form>    
    </div>
 </div>
   
<%- include('../partials/footer') %>