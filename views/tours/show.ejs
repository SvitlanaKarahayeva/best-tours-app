<%- include('../partials/header') %>

    <link rel="stylesheet" href="../../public/stylesheets/tourShow.css">
    <title>Tour details</title>
</head>
<body>

  <%- include('../partials/navbar') %>

    <div class="mt-4">
        <h4>Deails page</h4>
        <b-card img-src="<%= tour.image %> " img-alt="Tour image" img-left class="mb-3">
          <b-card-text>
            <%= tour.description %> 
          </b-card-text>
        </b-card>
    </div>

    <!-- Booking form -->
    
    <div class="form-div">
      <h3>Book now and pay later</h3>
      <form action="/tours/<%= tour._id%>" method="POST">
        
        
        <div class="form-outline datepicker" style="width:300px">
          <label>Date</label>
          <input type="date" id="start" name="date" value="2021-25-09"
            min="2021-09-25" max="2022-09-01">
        </div>

      <!-- Name and email from req.user -->
        <% if(typeof user !== 'undefined') { %>        
          <div class="form-group">  
            <label>Name</label>
            <input type="text" name="name" value="<%= user.name %>">
          </div>
          <div class="form-group">  
            <label>Email</label>
            <input type="email" name="email" value="<%= user.email %>">
          </div>
        <% } else { %>
           <div class="form-group">  
            <label>Name</label>
            <input type="text" name="name" value="name">
          </div>
          <div class="form-group">  
            <label>Email</label>
            <input type="email" name="email" value="email">
          </div>
        <% } %>

          <div class="form-group">  
            <label>Phone number</label>
            <input type="number" name="phoneNumber">
          </div>
          <div class="form-group">  
            <label>Number of people:</label>
            <input type="number" name="people">
          </div>

         <% if(typeof user !== 'undefined') { %>  
          <button type="submit" class="btn btn-primary">Book</button>
        <% } else { %>
          <button type="submit" class="btn btn-primary" disabled style="cursor: not-allowed;">Login first</button>
          <p>Please login with Google to book your tour</p>
          
          <% } %>
        </form>    
      </div>

<%- include('../partials/footer') %>