<%- include('./partials/header') %>
    <title>Best Tours</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    
    <!-- Bootstrap for carousel -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>

  <body>
    <%- include('./partials/navbar') %>
    <div id="head-name">
      <h1><a href="/tours">BEST TOURS in Mexico</a></h1>
        
      <h3>Book now and Pay later</h3>
    </div>

  <!-- Carousel of 5 images -->
    <div class="container">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
          <li data-target="#myCarousel" data-slide-to="3"></li>
          <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>
    
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
    
          <div class="item active">
            <img src="https://i.imgur.com/6FNkqSj.jpg" alt="" style="width:100%;">
            <div class="carousel-caption">
              <h3>Exciting water trips</h3>
            </div>
          </div>
    
          <div class="item">
            <img src="https://i.imgur.com/x04F5CQ.jpg" alt="" style="width:100%;">
            <div class="carousel-caption">
              <h3>Incredible Ancient Pyramids</h3> 
            </div>
          </div>
        
          <div class="item">
            <img src="https://i.imgur.com/9OaYqb1.jpg" alt="" style="width:100%;">
            <div class="carousel-caption">
              <h3>Swimming in Cenotes</h3>
            </div>
          </div>

          <div class="item">
            <img src="https://i.imgur.com/kWzuHw6.jpg" alt="" style="width:100%;">
            <div class="carousel-caption">
              <h3>Authentic Cuisine Tasting</h3>
             
            </div>
          </div>

          <div class="item">
            <img src="https://i.imgur.com/AWRIIue.jpg" style="width:100%;">
            <div class="carousel-caption">
              <h3>And Just Have a great Time...</h3>
              <p></p>
            </div>
          </div>
      
        </div>
    
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </body>
</html>
